{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "metaFields": {
      "type": "component",
      "repeatable": false,
      "component": "meta-fields.meta-fields"
    },
    "timeToRead": {
      "type": "string",
      "required": true
    },
    "articleSummary": {
      "type": "text"
    },
    "articleContent": {
      "type": "dynamiczone",
      "components": [
        "article-components.rich-text-json",
        "article-components.image-descriptions",
        "article-components.video-url"
      ],
      "required": true
    },
    "socialIcons": {
      "type": "component",
      "repeatable": true,
      "component": "shared.media",
      "required": true,
      "max": 5,
      "min": 1
    },
    "postedOn": {
      "type": "date",
      "required": true
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "articleImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "audio": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "audios"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "conclusion": {
      "type": "text",
      "required": false
    },
    "sources": {
      "type": "blocks"
    },
    "quoteBanner": {
      "displayName": "quoteBanner",
      "type": "component",
      "repeatable": false,
      "component": "article-components.quote-banner"
    },
    "oldRelatedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::old-article.old-article"
    }
  }
}
